# Database
DATABASE_URL=postgres://loco:loco@localhost:5432/bit-by-design_development

# JWT Authentication
JWT_SECRET=your-secret-key-here-min-32-chars

# Mailer (SMTP) - Example using Resend
MAILER_HOST=smtp.resend.com
MAILER_PORT=587
MAILER_SECURE=true
MAILER_AUTH_USER=resend
MAILER_AUTH_PASSWORD=your-resend-api-key

# Database connection pool settings (optional)
DB_CONNECT_TIMEOUT=500
DB_IDLE_TIMEOUT=500
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=10

SCHEDULER_CONFIG=config/scheduler.yaml
